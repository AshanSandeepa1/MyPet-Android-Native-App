<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Health Record Image (if available) -->
        <ImageView
            android:id="@+id/health_record_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"/> <!-- Initially hidden if no image -->

        <!-- Health Record Title -->
        <TextView
            android:id="@+id/health_record_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Rabies Vaccine"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- Health Record Type (e.g., Vaccination) -->
        <TextView
            android:id="@+id/health_record_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Vaccination"
            android:textSize="18sp" />

        <!-- Health Record Date -->
        <TextView
            android:id="@+id/health_record_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="November 13, 2024"
            android:textSize="16sp" />

        <!-- Vet Name -->
        <TextView
            android:id="@+id/health_record_vet_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="City Vet Center"
            android:textSize="16sp" />

        <!-- Notes -->
        <TextView
            android:id="@+id/health_record_notes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Administered at clinic"
            android:textSize="16sp" />

        <!-- Status (e.g., Completed) -->
        <TextView
            android:id="@+id/health_record_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Completed"
            android:textSize="16sp"
            android:textColor="@android:color/holo_green_dark" />


    </LinearLayout>
</ScrollView>
