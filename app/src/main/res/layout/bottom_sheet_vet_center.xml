<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_item"
    android:padding="16dp">

    <!-- Vet Center Name -->
    <TextView
        android:id="@+id/tvDetailName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Vet Center Name"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Address -->
    <TextView
        android:id="@+id/tvDetailAddress"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="123 Main Street, Colombo"
        android:textSize="16sp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvDetailName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Doctor Name and Specialization -->
    <TextView
        android:id="@+id/tvDetailDoctor"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Dr. Ayesha Fernando (Pet Surgery)"
        android:textSize="16sp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvDetailAddress"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Doctor Availability -->
    <TextView
        android:id="@+id/tvDetailAvailability"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Mon-Fri: 9AM-6PM"
        android:textSize="16sp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvDetailDoctor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Rating -->
    <TextView
        android:id="@+id/tvDetailRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rating: 4.5 â˜…"
        android:textSize="16sp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvDetailAvailability"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Open in Maps Button -->
    <Button
        android:id="@+id/btnOpenInMaps"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Open in Maps"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvDetailRating"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
