<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    android:background="@color/background_cream"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header Section -->
        <TextView
            android:id="@+id/textDetailsHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pet Details"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="28sp"
            android:fontFamily="sans-serif-medium"
            android:letterSpacing="0.1"
            android:layout_marginBottom="10dp" />

        <!-- Pet Image Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="16dp">

            <ImageView
                android:id="@+id/img_pet_picture"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:src="@drawable/ic_add_photo"
                android:scaleType="centerCrop"
                android:background="@drawable/rounded_shape"
                android:clipToOutline="true"
                android:contentDescription="Pet Picture"
                android:layout_marginBottom="1dp" />
        </LinearLayout>

        <!-- Pet Info Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="8dp"
            android:layout_marginHorizontal="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/label_petName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name:"
                    android:textStyle="bold"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/text_petName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Fetching..."
                    android:textColor="#666666"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/label_petSpecies"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Species:"
                    android:textStyle="bold"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/text_petSpecies"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Fetching..."
                    android:textColor="#666666"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/label_petBreed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Breed:"
                    android:textStyle="bold"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/text_petBreed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Fetching..."
                    android:textColor="#666666"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/label_petDob"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date of Birth:"
                    android:textStyle="bold"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/text_petDob"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Fetching..."
                    android:textColor="#666666"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/label_petColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Color:"
                    android:textStyle="bold"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/text_petColor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Fetching..."
                    android:textColor="#666666"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/label_petWeight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Weight (kg):"
                    android:textStyle="bold"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/text_petWeight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Fetching..."
                    android:textColor="#666666"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/label_petSex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gender:"
                    android:textStyle="bold"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/text_petSex"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Fetching..."
                    android:textColor="#666666"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/label_petNeutered"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Neutered:"
                    android:textStyle="bold"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/text_petNeutered"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Fetching..."
                    android:textColor="#666666"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/label_petVaccinated"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vaccinated:"
                    android:textStyle="bold"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/text_petVaccinated"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Fetching..."
                    android:textColor="#666666" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Medical Records Button -->
        <Button
            android:id="@+id/btn_medical_records"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View Medical Records"
            android:textColor="#FFFFFF"
            android:backgroundTint="@android:color/holo_blue_dark"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="10dp"/>

        <Button
            android:id="@+id/btn_delete_pet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Delete Pet Record"
            android:textColor="#FFFFFF"
            android:backgroundTint="@android:color/holo_red_light"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="10dp"/>

    </LinearLayout>
</ScrollView>
