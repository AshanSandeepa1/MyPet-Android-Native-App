<resources>
    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="queryHint">@string/search_hint</item>
        <item name="android:textColorHint">@android:color/darker_gray</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="CustomSpinnerStyle">
        <!-- Spinner text styling -->
        <item name="android:textColor">#000000</item> <!-- Black text color -->
        <item name="android:textSize">16sp</item> <!-- Set text size -->
        <item name="android:gravity">center_vertical</item> <!-- Center the text vertically -->
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>

        <!-- Dropdown width control -->
        <item name="android:dropDownWidth">250dp</item> <!-- Set dropdown width to a fixed value -->

        <!-- Background and text color for the dropdown -->
        <item name="android:popupBackground">@drawable/spinner_dropdown_background</item> <!-- Custom background for dropdown -->
    </style>
</resources>
